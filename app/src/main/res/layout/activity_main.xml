<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Hình ảnh bo tròn -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/avatar"
        android:layout_marginBottom="16dp" />

    <!-- Tên sinh viên -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Lớp sinh viên -->
    <TextView
        android:id="@+id/studentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp: 12A1"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Mã sinh viên -->
    <TextView
        android:id="@+id/studentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã SV: 123456"
        android:textSize="16sp" />

    <!-- Button chuyển đến NumberActivity -->


    <Button
        android:id="@+id/goToPrimeActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số nguyên tố" />

    <Button
        android:id="@+id/goToNumberActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số chính phương" />
</LinearLayout>
